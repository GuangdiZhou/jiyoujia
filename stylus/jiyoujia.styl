.nav
	width 1190px
	height 42px
	background-color rgb(245, 245, 245)
	border 1px solid rgb(232, 232, 232)
	font-family Microsoft YaHei 
	margin 0 auto
	margin-top 20px
	&>ul>li:not(.ipt)
		float left
		font-size 12px
		padding 14px 20px
		border-right 1px solid #e8e8e8
		&:hover
				background-color rgb(255, 255, 255)
				font-family Microsoft YaHei
				color rgb(255, 85, 0)	
	&>ul .ipt
		float left
		font-size 12px
		padding 8px 10px
		border-right 1px solid #e8e8e8
		&>input
			folat left
			width 58px
			height 23px
			border 1px solid #e8e8e8
			background-color white
			color gray

		& .btn
			text-align center
			color white
			border-radius 3pxp
			width 40px
			height 23px
			background-color black
			cursor pointer
			&:hover
				background-color rgb(248,40,0)
	& .locate
		float left
		width 50px
		height 12px
		margin 14px 20px
		font-size 12px
		& img
			float right
	& .page
		float right
		width 117px
		height 40px
		border-left 1px solid #e8e8e8
		line-height 40px
		text-align center
		font-size 12px
		user-select none
.box
	width 1210px
	margin 0 auto
	height 800px
	&>div
		float left
		width 222px
		height 358px
		border 1px solid #e8e8e8
		margin 30px 10px 0 10px
		&>a
			display block
			width 220px
			height 220px
			background-size 220px 220px
		& .price
			float left
			display block
			font-size 16px
			font-weight bold
			margin 14px 0 14px 10px
		& .baoyou
			float left
			display block
			width 28px 
			height 14px
			font-size 12px
			font-weight bold
			margin 14px 0
			background-color #ff4400
			line-height 13px
			padding 1px 2px
			color white
		& .name
			display block
			width 200 px
			margin-left 10px
			text-overflow ellipsis
			white-space nowrap
			overflow hidden
			font-size 12px
		& .sold
			display block
			margin 12px 10px
			font-size 12px
			color #9a9a9a
		& .owner
			float left
			display block
			margin-left 10px
			font-size 12px
			color #9a9a9a
		& .location
			float right
			display block
			margin-right 10px
			font-size 12px
			color #9a9a9a
		& .pic
			float left
			width 200px
			height 16px
			margin 8px 0 0 10px
			& .jin
				float left
				display block
			& .wang
				float right
				display block
	